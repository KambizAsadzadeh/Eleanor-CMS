Options All -ExecCGI -Indexes -Includes +FollowSymLinks
DirectoryIndex index.php
ServerSignature Off

AddType application/x-javascript .js
AddType text/css .css
<FilesMatch "\.js$">
ForceType "text/javascript; charset=utf-8"
</FilesMatch>

#{full}index.php?module=errors&code=400 - пример без ЧПУ
#Bad Rquest
ErrorDocument 400 {full}errors/400.html
#Authorization Required
ErrorDocument 401 {full}errors/401.html
#Forbidden
ErrorDocument 403 {full}errors/403.html
#Not found
#ErrorDocument 404 {full}errors/404.html
#Method Not Allowed
ErrorDocument 405 {full}errors/405.html
#Request Timed Out
ErrorDocument 408 {full}errors/408.html
#Request URI Too Long
ErrorDocument 414 {full}errors/414.html
#Internal Server Error
ErrorDocument 500 {full}errors/500.html
#Not Implemented
ErrorDocument 501 {full}errors/501.html
#Bad Gateway
ErrorDocument 502 {full}errors/502.html
#Service Unavailable
ErrorDocument 503 {full}errors/503.html
#Gateway Timeout
ErrorDocument 504 {full}errors/504.html

<IfModule mod_rewrite.c>
	#Редирект для чужих доменов
	#RewriteCond %{HTTP_HOST} !^{shost}$
	#RewriteRule ^(.*)$ {sprotocol}{shost}/$1 [R=301,L]

	RewriteEngine On

	#Правила для скачивания: отдаем любой контент только через скрипт
	#НЕ УДАЛЯЙТЕ И НЕ КОММЕНТИРУЙТЕ СТРОКУ НИЖЕ!!!! ЭТО ЧРЕВАТО ВЗЛОМОМ!!!
	RewriteRule ^uploads/(.*)$ download.php?download=$1 [L]

	#Если запрашиваемый ресурс не папка и не файл - это ЧПУ
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	#Если файл - картинка. Нафик надо сообщать об этом системе... Это ж целую страницу придется генерить из-за случайной глупости, что тяжело для сервера...
	RewriteCond %{REQUEST_URI} !\.(css|js|jpe?g|gif|png|bmp)$
	RewriteRule ^(.*)$ index.php?!$1!&%{QUERY_STRING} [L]
</IfModule>